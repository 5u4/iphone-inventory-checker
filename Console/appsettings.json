{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Debug"
    },
    "Enrich": [
      "FromLogContext"
    ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "restrictedToMinimumLevel": "Information",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext} - {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7
        }
      }
    ]
  },
  "Browser": {
    "Headless": true,
    "TimeoutInMilliseconds": 300000,
    "SlowMoInMilliseconds": 400
  },
  "InventoryPage": {
    "SpecPageUrl": "https://www.apple.com/ca/shop/buy-iphone/iphone-17-pro/6.3-inch-display-256gb-silver"
  },
  "InventoryChecker": {
    "ZipCode": "V5H4J2"
  },
  "Workflow": {
    "CheckInterval": "00:01:15"
  },
  "Notifier": {
    "Type": "Ntfy",
    "Topic": "i17-inventory"
  }
}
